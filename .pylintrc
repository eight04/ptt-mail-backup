[MESSAGES CONTROL]
disable=
  design,
  fixme,
  missing-docstring,
  trailing-whitespace,
  # https://github.com/PyCQA/pylint/issues/2175
  wrong-import-order,
  
[BASIC]
# https://github.com/PyCQA/pylint/issues/2018
argument-rgx=^[a-z_\d]{1,}$
variable-rgx=^[a-z_\d]{1,}$
attr-rgx=^[a-z_\d]{1,}$
const-rgx=^[a-zA-Z_\d]{1,}$

[TYPECHECK]
ignored-modules=pathlib
